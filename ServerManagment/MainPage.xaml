<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServerManagment.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" Padding="20">
                <Label Text="File Manager" FontSize="24" HorizontalOptions="Center" />
                <Button Text="Start Server" Clicked="OnStartServerClicked" />
                <Button Text="Stop Server" Clicked="OnStopServerClicked" />
                <Button Text="Refresh Files" Clicked="OnRefreshFilesClicked" />
                <Button Text="Upload File" Clicked="OnUploadFileClicked" />
                <CollectionView x:Name="FilesList" HeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Name}" VerticalOptions="Center" />
                                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                    <Button Text="" FontFamily="MaterialIcons" FontSize="20" Clicked="OnDownloadFileClicked" CommandParameter="{Binding Name}" ToolTipProperties.Text="Download" Background="Transparent"/>
                                    <Button Text="" FontFamily="MaterialIcons" FontSize="20" Clicked="OnRenameFileClicked" CommandParameter="{Binding Name}" ToolTipProperties.Text="Rename" Background="Transparent"/>
                                    <Button Text="" FontFamily="MaterialIcons" FontSize="20" Clicked="OnDeleteFileClicked" CommandParameter="{Binding Name}" ToolTipProperties.Text="Delete" Background="Transparent"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label x:Name="StatusLabel" Text="Status: Waiting..." />
            </VerticalStackLayout>
        </ScrollView>
        <ScrollView x:Name="Server_Logs" Grid.Row="1" BackgroundColor="Black">
            <VerticalStackLayout Spacing="20" Padding="20">
                <Label TextColor="White" x:Name="ConsoleLabel" Text="Console output will be displayed here." />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>